{
    "files.associations": {
        "*.f90": "FortranFreeForm"
    },
    "fortran.formatting.formatter": "fprettify",
    "fortran.formatting.fprettifyArgs": [
        "--silent -i 2 -l 120 --whitespace-type true --whitespace-comma false --case 2 2 2 2"
    ],
    "[FortranFreeForm]": {
        "editor.defaultFormatter": "Blamsoft.fprettify"
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "cmake.configureOnOpen": true,
    "fortran.linter.extraArgs": [
        "--silent -i 2 -l 120 --whitespace-type true --whitespace-comma false --case 2 2 2 2"
    ],
    "fortran.linter.compilerPath": "fprettify",
    "fprettify.arguments": "--silent -i 2 -l 120 --whitespace-type true --whitespace-comma false --case 2 2 2 2"
}